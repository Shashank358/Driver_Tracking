<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttendenceActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="40dp"
        app:cardCornerRadius="10dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"

        >
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/toolbar"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
            <cf.poorcoder.driverapplication.Views.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                style="@style/TextAppearance.AppCompat.Title"
                android:text="Your Attendence for "/>
            <cf.poorcoder.driverapplication.Views.MyTextView
                android:id="@+id/attendence_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="July"
                android:textSize="16sp"
                style="@style/TextAppearance.AppCompat.Title"/>
            <cf.poorcoder.driverapplication.Views.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" is "
                android:textSize="16sp"
                style="@style/TextAppearance.AppCompat.Title"/>
            <cf.poorcoder.driverapplication.Views.MyTextView
                android:id="@+id/attended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textSize="22sp"
                android:textColor="@color/colorPrimary"
                style="@style/TextAppearance.AppCompat.Title"/>
            <cf.poorcoder.driverapplication.Views.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                style="@style/TextAppearance.AppCompat.Title"
                android:text=" / "/>
            <cf.poorcoder.driverapplication.Views.MyTextView
                android:id="@+id/total_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                style="@style/TextAppearance.AppCompat.Title"
                android:text="24"/>
        </LinearLayout>

        <cf.poorcoder.driverapplication.Views.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            style="@style/TextAppearance.AppCompat.Title"
            android:text="Recent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">
                    <cf.poorcoder.driverapplication.Views.MyTextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24"
                        android:textSize="18sp"
                        style="@style/TextAppearance.AppCompat.Title"/>
                    <cf.poorcoder.driverapplication.Views.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/06/2019"/>
                </LinearLayout>
                <cf.poorcoder.driverapplication.Views.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Absent"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>